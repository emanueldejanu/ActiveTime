<UserControl 
    x:Class="DustInTheWind.ActiveTime.MainGuiModule.Views.ButtonBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        
    xmlns:cmd="clr-namespace:Microsoft.Practices.Prism.Commands;assembly=Microsoft.Practices.Prism"
             
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">

        <Button Content="Apply" Margin="5,0,0,0" MinWidth="75"
                cmd:Click.Command="{Binding ApplyCommand}"
                IsEnabled="{Binding Path=IsApplyButtonEnabled, Mode=OneWay}"
                TabIndex="0" />
        
        <Button Content="Cancel" Margin="5,0,0,0" MinWidth="75"
                cmd:Click.Command="{Binding CancelCommand}"
                IsEnabled="{Binding Path=IsCancelButtonEnabled, Mode=OneWay}"
                IsCancel="True"
                TabIndex="2" />
        
        <Button Content="Save" Margin="5,0,0,0" MinWidth="75"
                cmd:Click.Command="{Binding SaveCommand}"
                IsEnabled="{Binding Path=IsSaveButtonEnabled, Mode=OneWay}"
                IsDefault="True"
                TabIndex="1" />

    </StackPanel>

</UserControl>
