<Window
    x:Class="DustInTheWind.ActiveTime.Views.CalendarWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DustInTheWind.ActiveTime.Views"
    xmlns:viewModels="clr-namespace:DustInTheWind.ActiveTime.ViewModels"

    mc:Ignorable="d"
    x:ClassModifier="internal"
    Title="CalendarWindow"
    Height="200"
    Width="200"
    d:DataContext="{d:DesignInstance viewModels:CalendarViewModel}"
    WindowStyle="ToolWindow"
    ShowInTaskbar="False"
    ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/WindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="WindowStyle"/>
    </Window.Style>

    <Viewbox
        Margin="3">

        <Calendar
            SelectedDate="{Binding Path=Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            GotMouseCapture="calendar_OnGotMouseCapture">
        </Calendar>

    </Viewbox>

</Window>
