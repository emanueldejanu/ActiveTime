<UserControl
    x:Class="DustInTheWind.ActiveTime.Views.FrontView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:cmd="clr-namespace:Microsoft.Practices.Prism.Commands;assembly=Microsoft.Practices.Prism"
    xmlns:regions="http://www.codeplex.com/CompositeWPF"
    xmlns:ui="clr-namespace:DustInTheWind.ActiveTime.Common.UI;assembly=ActiveTime.Common"
    xmlns:converters="clr-namespace:DustInTheWind.ActiveTime.Converters"

    mc:Ignorable="d" 
    d:DesignHeight="300"
    d:DesignWidth="300"
    Loaded="MainView_OnLoaded">

    <UserControl.Resources>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="90" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Date:"
            Margin="3" />

        <DatePicker
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="3"
            HorizontalAlignment="Left"
            MinWidth="150"
            SelectedDate="{Binding Path=Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            SelectedDateFormat="Long"/>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Active Time:"
            Margin="3" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="3"
            VerticalAlignment="Center"
            Text="{Binding Path=ActiveTime, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource TimeSpanToStringConverter}}"
            IsReadOnly="True" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Total Time:"
            Margin="3" />

        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="3"
            VerticalAlignment="Center"
            IsReadOnly="True">

            <TextBox.Text>
                <MultiBinding StringFormat="{}{0:00}:{1:00}:{2:00}">
                    <Binding Path="TotalTime.Hours" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                    <Binding Path="TotalTime.Minutes" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                    <Binding Path="TotalTime.Seconds" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                </MultiBinding>
            </TextBox.Text>

        </TextBox>

        <Label
            Grid.Row="1"
            Grid.Column="2"
            Content="Begin:"
            Margin="3" />

        <TextBox
            Grid.Row="1"
            Grid.Column="3"
            Margin="3"
            VerticalAlignment="Center"
            IsReadOnly="True">

            <TextBox.Text>
                <MultiBinding StringFormat="{}{0:00}:{1:00}:{2:00}">
                    <Binding Path="BeginTime.Hours" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                    <Binding Path="BeginTime.Minutes" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                    <Binding Path="BeginTime.Seconds" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                </MultiBinding>
            </TextBox.Text>

        </TextBox>

        <Label
            Grid.Row="2"
            Grid.Column="2"
            Content="Estimated End:"
            Name="label6"
            Margin="3" />

        <TextBox
            Grid.Row="2"
            Grid.Column="3"
            Margin="3"
            Name="textBoxEstimatedEndTime"
            VerticalAlignment="Center"
            IsReadOnly="True">

            <TextBox.Text>
                <MultiBinding StringFormat="{}{0:00}:{1:00}:{2:00}">
                    <Binding Path="EstimatedEndTime.Hours" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                    <Binding Path="EstimatedEndTime.Minutes" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                    <Binding Path="EstimatedEndTime.Seconds" UpdateSourceTrigger="PropertyChanged" Mode="OneWay" />
                </MultiBinding>
            </TextBox.Text>

        </TextBox>

        <ContentControl
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            regions:RegionManager.RegionName="{x:Static ui:RegionNames.RecordsRegion}"/>

        <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="5" Name="stackPanel2" Orientation="Horizontal">

            <Button Content="Time Records" MinWidth="75" Name="buttonTimeRecords" Margin="0,0,5,0" cmd:Click.Command="{Binding TimeRecordsCommand}"/>
            <Button Content="Comments" MinWidth="75" Name="buttonComments" Margin="0,0,5,0" cmd:Click.Command="{Binding CommentsCommand}"/>
            <Button Content="Refresh" Margin="0,0,5,0" Name="buttonRefresh" cmd:Click.Command="{Binding RefreshCommand}" MinWidth="75" />

        </StackPanel>
    </Grid>

</UserControl>
