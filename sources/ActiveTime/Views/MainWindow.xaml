<Window
    x:Class="DustInTheWind.ActiveTime.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
    xmlns:regions="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
    xmlns:ui="clr-namespace:DustInTheWind.ActiveTime.Common.UI;assembly=ActiveTime.Common"

    Title="{Binding Path=WindowTitle}"
    Height="400" Width="400"
    ResizeMode="CanResizeWithGrip"
    MinWidth="400" MinHeight="400"
    UseLayoutRounding="True" VisualClearTypeHint="Enabled" VisualTextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    Loaded="MainWindow_OnLoaded">

    <DockPanel>

        <ContentControl DockPanel.Dock="Top" regions:RegionManager.RegionName="{x:Static ui:RegionNames.MainMenuRegion}"/>
        <ContentControl DockPanel.Dock="Bottom" regions:RegionManager.RegionName="{x:Static ui:RegionNames.StatusInfoRegion}"/>
        <ContentControl regions:RegionManager.RegionName="{x:Static ui:RegionNames.MainContentRegion}"/>

    </DockPanel>

</Window>
