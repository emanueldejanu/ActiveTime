<Window
    x:Class="DustInTheWind.ActiveTime.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:regions="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
    xmlns:ui="clr-namespace:DustInTheWind.ActiveTime.Common.UI;assembly=ActiveTime.Common"
    xmlns:views="clr-namespace:DustInTheWind.ActiveTime.Views"

    Title="{Binding Path=WindowTitle}"
    Height="500"
    Width="500"
    ResizeMode="CanResizeWithGrip"
    MinWidth="400"
    MinHeight="400"
    UseLayoutRounding="True"
    VisualClearTypeHint="Enabled"
    VisualTextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    Loaded="MainWindow_OnLoaded">

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/LabelStyles.xaml"/>
                <ResourceDictionary Source="/Styles/TextBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="ListBox">
                <Setter Property="Background" Value="#333337"/>
                <Setter Property="Foreground" Value="#e6e6e6"/>
            </Style>
        </ResourceDictionary>

    </Window.Resources>

    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource MainBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource MainForeground}"/>
        </Style>
    </Window.Style>

    <DockPanel>

        <views:MainMenuView DockPanel.Dock="Top" DataContext="{Binding MainMenuViewModel}"/>

        <views:StatusInfoView DockPanel.Dock="Bottom" DataContext="{Binding StatusInfoViewModel}"/>

        <ContentControl regions:RegionManager.RegionName="{x:Static ui:RegionNames.MainContentRegion}"/>

    </DockPanel>

</Window>