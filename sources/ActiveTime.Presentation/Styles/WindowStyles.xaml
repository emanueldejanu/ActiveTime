<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:DustInTheWind.ActiveTime.Views">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.ActiveTime.Presentation;component/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource MainBackground}" />
        <Setter Property="Foreground" Value="{StaticResource MainForeground}" />
    </Style>

    <Style TargetType="{x:Type views:MainWindow}" BasedOn="{StaticResource WindowStyle}" />
    <Style TargetType="{x:Type views:AboutWindow}" BasedOn="{StaticResource WindowStyle}" />
    <Style TargetType="{x:Type views:CalendarWindow}" BasedOn="{StaticResource WindowStyle}" />
    <Style TargetType="{x:Type views:MessageWindow}" BasedOn="{StaticResource WindowStyle}" />
    <Style TargetType="{x:Type views:OverviewWindow}" BasedOn="{StaticResource WindowStyle}" />

</ResourceDictionary>