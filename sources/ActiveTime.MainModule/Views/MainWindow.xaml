<Window
    x:Class="DustInTheWind.ActiveTime.MainModule.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
    xmlns:regions="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
    xmlns:common="clr-namespace:DustInTheWind.ActiveTime.Common;assembly=ActiveTime.Common"
        
    Title="Shell"
    Height="400" Width="400"
    ResizeMode="CanResizeWithGrip"
    MinWidth="350" MinHeight="350"
    UseLayoutRounding="True" VisualClearTypeHint="Enabled" VisualTextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen">

    <DockPanel>

        <ContentControl DockPanel.Dock="Top" regions:RegionManager.RegionName="{x:Static common:RegionNames.MainMenuRegion}"/>

        <ContentControl DockPanel.Dock="Bottom" regions:RegionManager.RegionName="{x:Static common:RegionNames.StatusInfoRegion}"/>

        <ContentControl regions:RegionManager.RegionName="{x:Static common:RegionNames.MainContentRegion}"/>

    </DockPanel>

</Window>
